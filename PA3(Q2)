#include <stdio.h>
#include <string.h>

int areAnagram(char s1[], char s2[]);

int main() {
    char s1[50], s2[50];
    printf("Enter first string: ");
    scanf("%s", s1);
    printf("Enter second string: ");
    scanf("%s", s2);

    if (areAnagram(s1, s2))
        printf("Strings are anagrams\n");
    else
        printf("Strings are not anagrams\n");

    return 0;
}

int areAnagram(char s1[], char s2[]) {
    int count[256] = {0};

    if (strlen(s1) != strlen(s2))
        return 0;

    for (int i = 0; s1[i]; i++) {
        count[s1[i]]++;
        count[s2[i]]--;
    }

    for (int i = 0; i < 256; i++) {
        if (count[i] != 0)
            return 0;
    }
    return 1;
}
