#include <stdio.h>

void reverseString(char str[]);

int main() {
    char str[50];
    printf("Enter string: ");
    scanf("%s", str);

    reverseString(str);
    printf("Reversed string: %s\n", str);

    return 0;
}

void reverseString(char str[]) {
    int i = 0, j;
    char temp;

    for (j = 0; str[j] != '\0'; j++);
    j--;   // last index

    while (i < j) {
        temp = str[i];
        str[i] = str[j];
        str[j] = temp;
        i++;
        j--;
    }
}
