#include <stdio.h>
#include <stdlib.h>

int main() {
    int *arr, n1, n2, i;

    // Initial size
    printf("Enter initial size n1: ");
    scanf("%d", &n1);

    // Dynamic memory allocation
    arr = (int *)malloc(n1 * sizeof(int));

    printf("Enter %d elements:\n", n1);
    for (i = 0; i < n1; i++) {
        scanf("%d", &arr[i]);
    }

    // Expand size
    printf("Enter size to expand n2: ");
    scanf("%d", &n2);

    arr = (int *)realloc(arr, (n1 + n2) * sizeof(int));

    printf("Enter %d more elements:\n", n2);
    for (i = n1; i < n1 + n2; i++) {
        scanf("%d", &arr[i]);
    }

    // Print final array
    printf("Final array elements:\n");
    for (i = 0; i < n1 + n2; i++) {
        printf("%d ", arr[i]);
    }

    free(arr); // Free memory
    return 0;
}
