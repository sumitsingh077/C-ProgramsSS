#include <stdio.h>

// Function declarations
void input(int a[], int n);
int sum(int a[], int n);
int min(int a[], int n);
int max(int a[], int n);
void display(int a[], int n);

int main() {
    int a[10], n;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    input(a, n);

    printf("Sum = %d\n", sum(a, n));
    printf("Average = %.2f\n", (float)sum(a, n) / n);
    printf("Minimum = %d\n", min(a, n));
    printf("Maximum = %d\n", max(a, n));

    display(a, n);

    return 0;
}

// Input function
void input(int a[], int n) {
    for (int i = 0; i < n; i++)
        scanf("%d", &a[i]);
}

// Sum function
int sum(int a[], int n) {
    int s = 0;
    for (int i = 0; i < n; i++)
        s += a[i];
    return s;
}

// Min function
int min(int a[], int n) {
    int m = a[0];
    for (int i = 1; i < n; i++)
        if (a[i] < m)
            m = a[i];
    return m;
}

// Max function
int max(int a[], int n) {
    int m = a[0];
    for (int i = 1; i < n; i++)
        if (a[i] > m)
            m = a[i];
    return m;
}

// Display function
void display(int a[], int n) {
    printf("Array elements: ");
    for (int i = 0; i < n; i++)
        printf("%d ", a[i]);
}
