#include <stdio.h>
#include <string.h>

int isPalindrome(char str[]);

int main() {
    char str[50];
    printf("Enter string: ");
    scanf("%s", str);

    if (isPalindrome(str))
        printf("Palindrome string\n");
    else
        printf("Not a palindrome string\n");

    return 0;
}

int isPalindrome(char str[]) {
    int i = 0, j = strlen(str) - 1;

    while (i < j) {
        if (str[i] != str[j])
            return 0;
        i++;
        j--;
    }
    return 1;
}
